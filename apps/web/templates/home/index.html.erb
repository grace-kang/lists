    <%=
    form_for :session, '/sessions/logout', method: :delete do
      submit 'Log Out', class: "hover:bg-grey-light font-semibold border border-2 border-grey text-sm rounded text-grey-dark px-2 py-1 mx-2"
    end
  %>
  
  <%# <div class="flex "> %>
    <div class="flex justify-center">
      <%=
        form_for :list, '/lists', class: "w-full max-w-xs" do
          text_field :name, class: "border shadow parent w-full text-grey-darker py-2 px-3 my-2", placeholder: 'List Name'
          hidden_field :user_id, value: user.id
          submit 'Create', class:"bg-grey hover:bg-grey-dark font-semibold text-sm text-white py-1 px-2 rounded"
        end
      %>
    </div>
  <%# </div> %>

<% if lists.any? %>
  <div class="flex flex-wrap my-3 mx-4">
    <% lists.each do |list| %>
      <div class="self-start overflow-hidden shadow-md px-6 py-4 mx-2 my-2">
        <div class="flex flex-wrap justify-between my-3">
          <div class="text-grey-dark"><h2><%= list.name %></h2></div>
    
          <%# delete list button %>
          <%=
            form_for :list, '/lists/delete' do
              hidden_field :id, value: list.id

              div class: 'controls' do
                submit 'X', class: "bg-grey hover:bg-grey-dark text-sm font-semibold text-white px-1 rounded"
              end
            end
          %>
        </div>

        <% if list.items.any? %>
          <div id="items">
            <% list.items.each do |item| %>
							<% if !item.done %>
                <div class="flex justify-between">
                  <%= 
                    form_for :item, '/items/mark' do
                      div class: 'input' do
                        hidden_field :id, value: item.id
                      end

                      div class: 'controls' do
                        submit item.text, class:"text-grey-darker ml-3 overflow-auto"
                      end
                    end
                  %>
									<%=
										form_for :item, '/items/delete' do
											hidden_field :id, value: item.id
											submit 'x', class: 'bg-white text-sm font-semibold text-grey-dark mx-3 rounded'
										end
									%>
                </div>
							<% end %>
							<% if item.done %>
								<div class="flex justify-between">
                  <%= 
                    form_for :item, '/items/unmark' do
                      div class: 'input' do
                        hidden_field :id, value: item.id
                      end

                      div class: 'controls' do
                        submit item.text, class:"text-grey ml-3 line-through overflow-auto"
                      end
                    end
                  %>
									<%=
										form_for :item, '/items/delete' do
											hidden_field :id, value: item.id
											submit 'x', class: 'bg-white text-sm font-semibold text-grey-dark mx-3 rounded'
										end
									%>
								</div>
							<% end %>
            <% end %>
          </div>
        <% else %>
          <p class="placeholder"></p>
        <% end %>

        <%# add new item form %>
        <%=
          form_for :item, '/items' do
            div class: 'input' do
              text_field :text, class: "border shadow parent w-full text-grey-darker py-2 px-3 my-2", placeholder: 'New Item'
            end
						
						hidden_field :done, value: false

            hidden_field :list_id, value: list.id

            div class: 'controls' do
              submit 'Add', class:"bg-grey hover:bg-grey-dark font-semibold text-sm text-white py-1 px-2 rounded"
            end
          end
        %>

      </div>
    <% end %>
  </div>
<% else %>
  <p class="placeholder text-sm text-grey-dark m-4">You do not have any lists yet.</p>
<% end %>
